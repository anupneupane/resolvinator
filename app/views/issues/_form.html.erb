<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.radio_button :status, "open" %>
    <%= f.label :status, 'Open', :for => 'issue_status_open' %>
    <%= f.radio_button :status, "instructor needed" %>
    <%= f.label :status, 'Instructor Needed', :for => 'issue_status_instructor_needed' %>
    <%= f.radio_button :status, "closed" %>
    <%= f.label :status, 'Closed', :for => 'issue_status_closed' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
