<h1>Feed.io</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |issue| %>
    <tr>
      <td><%= link_to issue.title, issue_path(issue) %></td>
      <td><%= link_to issue.description, issue_path(issue) %></td>
      <td><%= issue.status %></td>
      <td><%= link_to 'Show', issue %></td>
      <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

