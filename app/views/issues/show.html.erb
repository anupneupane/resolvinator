<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @issue.title %>
</p>
<p>
  <b>Description:</b>
  <%= @issue.description %>
</p>
<p>
  <b>Status:</b>
  <%= @issue.current_status %>
</p>
<p>
  <b>Answer Submitted by:</b>
   <%= @answerer.username %>
</p>
<%= link_to 'Edit', edit_issue_path(@issue) %> |
<%= link_to 'Back', issues_path %>
<!-- New Comment Form -->

<%= form_for([@issue, @comment]) do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>

<!-- Issue.comments -->


<% @issue.comments.each do |comment| %>
 <%= render 'comments/answer', :c => comment %>
<% end %>